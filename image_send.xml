<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="メニューに戻る"
                android:id="@+id/img_back_menu"
  />

  <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="画像辞書"
              android:id="@+id/img_send_title"
              android:layout_below="@id/img_back_menu"
  />

  <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:id="@+id/img_user_id"
            android:layout_below="@id/img_send_title"
  />

  <Button
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="画像選択"
                 android:id="@+id/select_img"
                 android:layout_below="@id/img_user_id"
  />
</LinearLayout>
